        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.etat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name_respo_mission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateDepart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateArrivee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.heureDepart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.heureArrivee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.echlon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.matricule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.objetDepart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moyenTransport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreCheuvaux)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.montant_total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id_trajet)
                </td>
                <td>
                    <a asp-action="Document" asp-route-id="@item.idOrdremission">Document</a> |
                    <a asp-action="Edit" asp-route-id="@item.idOrdremission">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.idOrdremission" onclick="return confirm('Are you sure you wish to delete this Mission Ordre numero : '+ @item.numero + '?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
