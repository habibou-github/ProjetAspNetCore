@model IEnumerable<migrationProject.Models.OrdreMission>

@{
    ViewData["Title"] = "OrdreMissionList";
    Layout = "~/Views/Shared/dash.cshtml";
    
}

<h1>OrdreMissionList</h1>

<p>
    <a asp-action="OrdreMissionInfo">Create New</a>
</p>
<br />
<table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.etat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name_respo_mission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateDepart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateArrivee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.heureDepart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.heureArrivee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.echlon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.matricule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.objetDepart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moyenTransport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreCheuvaux)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.montant_total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_trajet)
            </th>
            <th></th>
        </tr>
    </thead>
